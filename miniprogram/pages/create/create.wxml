<!--index.wxml-->
<view class="container">
  <view class="main-wrapper">
    <view>
      <input class="nickname-input" placeholder="宝贝昵称" placeholder-class="placeholder" model:value="{{nickName}}" style="background-color: {{theme}}" />
    </view>
    <view>
      <view wx:for="{{tags}}" wx:key="{{index}}" style="background: {{ item.color }}" class="tag" bind:tap="bindTagChange"
      data-theme="{{item.color}}"
      data-value="{{item.id}}"
      >{{item.name}}</view>
    </view>
    <view class="bar-wrapper">
      <text>Fullname</text>
      <input placeholder="全名" class="fullname-input" placeholder-class="placeholder" model:value="{{fullName}}" />
    </view>
    <view class="bar-wrapper">
      <text>Gender</text>
      <view class="gender">
        <radio-group>
          <label>
            <radio color="{{theme}}" value="{{0}}" checked><label class="radio-girl">Girl</label></radio>
          </label>
          <label>
            <radio color="{{theme}}" value="{{1}}"><label class="radio-girl">Boy</label></radio>
          </label>
        </radio-group>
      </view>
    </view>
    <view class="bar-wrapper">
      <text>Birth</text>
      <picker mode="date" value="{{birth}}" start="1900-09-01" bindchange="bindDateChange">
        <view class="picker">{{birth}}</view>
      </picker>
    </view>
    <view class="bar-wrapper">
      <text>Remark</text>
      <textarea placeholder="备注" class="remark" placeholder-class="placeholder" model:value="{{remark}}" />
    </view>
    <Button class="confirm" type="primary">测试submit</Button>
  </view>
</view>