<!--pages/list/list.wxml-->
<view class="container">
  <button type="primary" bindtap="handleCode">获取登录code</button>
  <button type="primary" class="add" bindtap="handleAdd">添加儿童名片</button>
  <view wx:for="{{kids}}" wx:key="{{id}}" class="kid-bar" style="background-color: {{ item._color }}" 
  bindlongtap="handleKidLongTap" 
  bindtap="handleKidTap"
  data-kid-id="{{item.id}}" 
  data-kid-name="{{item.nickname}}"
  >
    <view class="head">
    <image src="{{item.gender === 1 ? icon_boy : icon_girl}}"></image>
    </view>
    <view class="info">
      <text class="info-main">{{item.nickname}}</text>
      <view class="side-info">
        <text>{{item._age}}</text>
      <text>{{item._grade}}</text>
      </view>
    </view>
  </view>
</view>